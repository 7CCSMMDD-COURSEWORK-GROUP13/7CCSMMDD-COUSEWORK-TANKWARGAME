game Tank{
	var baseEnemyCount = 2
	screen MainFrame{
		screenWidth = 760
		screenHeight = 750
	}
	
	
	field easy {
		enemyCount = baseEnemyCount+1
		obstacle test{
			wall first{
				wallWidth = 100
				wallHeight = 100
				wallPosX = 190
				wallPosY = 200
			}
		}
		
		nextLevel goto medium
	}
	
	field medium {
		enemyCount = baseEnemyCount+3
		obstacle test{
			wall first{
				wallWidth = 100
				wallHeight = 100
				wallPosX = 250
				wallPosY = 250
			}
			wall second{
				wallWidth = 100
				wallHeight = 100
				wallPosX = 550
				wallPosY = 550
			}
		}
		
		nextLevel goto hard
		
		
	}
	
	field hard {
		enemyCount = baseEnemyCount+4
		obstacle test{
			wall first{
				wallWidth = 100
				wallHeight = 100
				wallPosX = 250
				wallPosY = 250
			}
			wall second{
				wallWidth = 100
				wallHeight = 100
				wallPosX = 550
				wallPosY = 550
			}
			wall third{
				wallWidth = 100
				wallHeight = 100
				wallPosX = 600
				wallPosY = 600
			}
		}
		
		nextLevel goto easy
		
	}
	
	//superMode
	end-game("Congratulations You Win!","Unfortunately You Lost!")
	start = easy
}